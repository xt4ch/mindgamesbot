{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "NodeNext",
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "#src/*": [
                "./src/*"
            ],
            "#lib/*": [
                "./src/lib/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}